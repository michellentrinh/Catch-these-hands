#include <Servo.h>

// Create 5 servo objects
Servo servo1;
Servo servo2;
Servo servo3;
Servo servo4;
Servo servo5;

void setup() {
  // Attach each servo to a digital pin
  servo1.attach(3);   // Servo 1 to D3
  servo2.attach(5);   // Servo 2 to D5
  servo3.attach(6);   // Servo 3 to D6
  servo4.attach(9);   // Servo 4 to D9
  servo5.attach(10);  // Servo 5 to D10
}

void loop() {
  // Move all servos to 0°
  servo1.write(0);
  servo2.write(0);
  servo3.write(0);
  servo4.write(0);
  servo5.write(0);
  delay(1000);

  // Move all servos to 90°
  servo1.write(90);
  servo2.write(90);
  servo3.write(90);
  servo4.write(90);
  servo5.write(90);
  delay(1000);

  // Move all servos to 180°
  servo1.write(180);
  servo2.write(180);
  servo3.write(180);
  servo4.write(180);
  servo5.write(180);
  delay(1000);
}
